<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.experiences.projects.booktable.SharedMenu">

    <TextView
        android:id="@+id/menu_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_weight="2.0"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/menu_item_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_item_name"
        android:layout_margin="5.0dip"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_item_desc"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:orientation="horizontal"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip">

        <ImageButton
            android:id="@+id/menu_down_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:background="@android:color/transparent"
            android:src="@drawable/left_arrow_button" />

        <TextView
            android:id="@+id/menu_qty_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:lines="3"
            android:textAppearance="?android:textAppearanceLarge" />

        <ImageButton
            android:id="@+id/menu_up_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:background="@android:color/transparent"
            android:src="@drawable/right_arrow_button" />
    </LinearLayout>

</RelativeLayout>